# CodexGigantus Configuration
# Copy this file to .env and customize for your environment

# Application Mode
APP_MODE=cli              # cli or web
WEB_PORT=8080             # Port for web GUI
WEB_HOST=0.0.0.0          # Host for web GUI

# Database Configuration (for database source mode)
DB_TYPE=postgres          # postgres, mysql, sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=codex
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# Database Schema Configuration
DB_TABLE_NAME=code_files
DB_COLUMN_PATH=file_path
DB_COLUMN_CONTENT=content
DB_COLUMN_TYPE=file_type
DB_COLUMN_SIZE=file_size

# Default Processing Configuration
DEFAULT_RECURSIVE=true
DEFAULT_DEBUG=false
DEFAULT_OUTPUT_FILE=output.txt
DEFAULT_SHOW_SIZE=false
DEFAULT_SHOW_FUNCS=false

# File Processing
MAX_FILE_SIZE=10485760    # 10MB in bytes
DEFAULT_ENCODING=utf-8

# Shell Completion Paths (override if needed)
BASH_COMPLETION_DIR=/etc/bash_completion.d
BASH_RC_PATH=~/.bashrc
ZSH_COMPLETION_DIR=~/.zsh/completions
ZSH_RC_PATH=~/.zshrc
FISH_COMPLETION_DIR=~/.config/fish/completions

# Logging
LOG_LEVEL=info            # debug, info, warn, error
LOG_FORMAT=text           # text or json

# Security
ALLOWED_EXTENSIONS=.go,.py,.js,.java,.cpp,.c,.h,.rb,.php,.ts,.tsx,.jsx
MAX_CONCURRENT_FILES=100
